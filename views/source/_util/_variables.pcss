$graydark: #323739;
$yellow: #ffd520;
$blueviolet: #f900da;
$white: #fff;

@custom-media --desktop (min-width: 1024px) and (max-width: 1360px);
@custom-media --tablet (min-width: 768px) and (max-width: 1024px);
@custom-media --mobile (min-width: 500px) and (max-width: 768px);
@custom-media --mobile-sm (max-width: 500px);

@custom-media --all (max-width: 1360px);
@custom-media --desktop-tablet (min-width: 768px) and (max-width: 1360px);
@custom-media --mobile-mobile-sm (max-width: 768px);
